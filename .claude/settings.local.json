{
  "permissions": {
    "allow": [
      "Bash(bun install:*)",
      "WebFetch(domain:ja.vite.dev)",
      "Bash(mv:*)",
      "Bash(bun run:*)",
      "WebFetch(domain:github.com)",
      "Bash(bun update:*)",
      "Bash(mkdir:*)"
    ],
    "deny": [
      "Read(.env)",
      "Write(.env)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/*)",
      "Bash(rm -rf /*)"
    ]
  }
}
